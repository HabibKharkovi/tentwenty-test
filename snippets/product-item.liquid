<div class="product-wrap " >
  <a class="image-wrap border-radius_l" href="{{ product.url }}">
    <img class="img" src="{{ product.featured_image | img_url: 'master'}}"/>
  </a>
  <div class="meta">
    <div class="sub-text-wrap space-bottom flex justify-between align-center">
      <span class="sub-text  heading-s uppercase">{{product.title}}</span>
      {% if section.settings.choose_collection != blank %}
        <svg class="heart-icon flex-between flex-center" xmlns="http://www.w3.org/2000/svg" width="20" height="19" viewBox="0 0 20 19" fill="none">
          <path d="M14.5 0C12.76 0 11.09 0.81 10 2.09C8.91 0.81 7.24 0 5.5 0C2.42 0 0 2.42 0 5.5C0 9.28 3.4 12.36 8.55 17.04L10 18.35L11.45 17.03C16.6 12.36 20 9.28 20 5.5C20 2.42 17.58 0 14.5 0ZM10.1 15.55L10 15.65L9.9 15.55C5.14 11.24 2 8.39 2 5.5C2 3.5 3.5 2 5.5 2C7.04 2 8.54 2.99 9.07 4.36H10.94C11.46 2.99 12.96 2 14.5 2C16.5 2 18 3.5 18 5.5C18 8.39 14.86 11.24 10.1 15.55Z" fill="#242424"/>
        </svg>
      {% endif %}
    </div>
    <h3 class="product-title space-bottom heading-s capitalize">{{ product.description }}</h3>
    
       <div class="variant-wrapper">
        {% for option in product.options_with_values %}
            <div class="selector-wrapper js product-form__item">
              {% if option.name == 'Color' %}
                <div class="color-swatch space-bottom flex" >
                  {% for value in option.values %}
                    <div class="color-wrap flex  align-center flex-center">
                      <div class="{{ value | handle }} col">
                      </div>
                    </div>
                  {% endfor %}
                </div>
              {% endif %}
              {% if option.name == 'Size' %}
                <div class="variant-wrapper flex" data-name="{{ option.name }}" data-index="option{{ forloop.index }}">
                  {% for value in option.values %}
                   <div class="variant-wrap flex align-center flex-center">
                    <div class="variant" value="{{ value | escape }}"{% if option.selected_value == value %} selected="selected"{% endif %}>{{ value }}</div>
                  </div>
                  {% endfor %}
                </div>
              {% endif %}
            </div>
          {% endfor %}
      </div> 
  </div>
</div>


