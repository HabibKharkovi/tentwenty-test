{{ 'hero-banner.css' | asset_url | stylesheet_tag }}

{% style %}
    .hero-banner__bg-image {
        background-image: url({{ section.settings.bg_image | img_url: 'master' }});
    }
{% endstyle %}
<div class="hero-banner">
    {%- if section.settings.bg_image != blank -%}
        <div class="hero-banner__bg-image">
            <div class="hero-banner__container page-width">
                <div class="hero-banner__wrapper">
                    <div class="hero-banner__content-wrap flex align-center">
                        <div class="hero-banner__content-inner">
                            {% if section.settings.title != blank %}
                                <h1 class="hero-banner__title uppercase ">{{ section.settings.title }}</h1>
                            {% endif %}
                            {% if section.settings.text != blank %}
                                <p class="hero-banner__text">{{ section.settings.text }}</p>
                            {% endif %}
                            {% if section.settings.link_text != blank %}
                                <a href="{{ section.settings.link }}" class="hero-banner__btn cursor-pointer capitalize">{{ section.settings.link_text }}</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {%- else -%}
        {{ 'product-1' | placeholder_svg_tag }}
    {%- endif -%}
</div>

{% schema %}
    {
        "name": "Hero banner",
        "settings": [
            {
                "type": "image_picker",
                "id": "bg_image",
                "label": "Background image"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "text",
                "id": "text",
                "label": "Text"
            },
            {
                "type": "text",
                "id": "link_text",
                "label": "Text"
            },
            {
                "type": "url",
                "id": "link",
                "label": "Url"
            }
        ],
        "presets": [
            {
                "name": "Hero banner"
            }
        ]
    }
{% endschema %}