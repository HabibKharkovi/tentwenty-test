{{ 'header-section.css' | asset_url | stylesheet_tag }}

<div class="header-section">
    <div class="page-width">
        <div class="header-section__wrapper">
            <div class="header-section__main-grid flex-between">
                <div class="header-section__menu-icon cursor-pointer">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" height="24" viewBox="0 0 24 24" width="24"><path d="M4 6H20M4 12H20M4 18H20" stroke="#4A5568" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/></svg>
                </div>
                {%- if section.settings.logo != blank -%}
                    <div class="header-section__logo">
                        <a class="header-section__logo-link" href="{{ routes.root_url }}">
                            <img class="img" src="{{ section.settings.logo | img_url: 'master'}}" alt="">
                        </a>
                    </div>
                <div class="header-section__search flex align-center">
                    <div class="dropdown cursor-pointer flex align-center">
                        <span class="header-section__text capitalize">all</span>
                        <span class="header-section__arrow">
                            <svg xmlns="http://www.w3.org/2000/svg" width="12" height="8" viewBox="0 0 12 8" fill="none">
                            <path opacity="0.3" d="M1 1.5L6 6.5L11 1.5" stroke="#242424" stroke-width="1.5"/>
                            </svg>
                        </span>
                    </div>
                    <div class="header-section__border"></div>
                    <input class="header-section__input" type="text" placeholder="Search something">
                    <div class="header-section__search-icon cursor-pointer">
                        <div class="header-section__search-icon-inner flex align-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M15.5796 14.4011L11.2911 10.1126C12.05 9.10764 12.5001 7.85641 12.5001 6.50006C12.5001 3.18635 9.81377 0.500061 6.50006 0.500061C3.18635 0.500061 0.500061 3.18635 0.500061 6.50006C0.500061 9.81377 3.18635 12.5001 6.50006 12.5001C7.85641 12.5001 9.10764 12.05 10.1126 11.2911L14.4011 15.5796L15.5796 14.4011ZM10.8337 6.50014C10.8337 8.89337 8.89362 10.8335 6.50039 10.8335C4.10715 10.8335 2.16705 8.89337 2.16705 6.50014C2.16705 4.10691 4.10715 2.16681 6.50039 2.16681C8.89362 2.16681 10.8337 4.10691 10.8337 6.50014Z" fill="white"/>
                            </svg>
                        </div>
                    </div>
                </div>
                <div class="header-section__icon-wrap flex align-center">
                    <div class="header-section__icon cursor-pointer position-reletive">
                        <span class="header-section__icon-inner">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="18" viewBox="0 0 14 18" fill="none">
