                                </g>
                                <defs>
                                <clipPath id="clip0_29_149">
                                <rect width="20" height="20" fill="white"/>
                                </clipPath>
                                </defs>
                                </svg>
                        </span>
                    </div>
                </div>
                {%- endif -%}
            </div>
        </div>
    </div>
    <div class="header-section__sub-header">
        <div class="page-width">
            <ul class="header-section__menu-list flex-between">
                {% for link in linklists[section.settings.choose_menu].links %}
                    <li class="header-section__menu-item">
                            <a href="{{ link.url }}" class="header-section__menu-link uppercase">{{ link.title }}</a>
                        {% if link.links != blank %}
                        <ul class="child">
                            {% for child_link in link.links %}  
                            <li class="header-section__menu-item">
                                <a href="{{ link.url }}" class="header-section__menu-link uppercase">{{ link.title }}</a>
                                {% if child_link.links != blank %}
                                    <ul class="grandchild">
                                        {% for grandchild_link in child_link.links %}  
                                            <li class="header-section__menu-item">
                                                <a href="{{ link.url }}" class="header-section__menu-link uppercase">{{ link.title }}</a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}   
                            </li>
                            {% endfor %}
                        </ul> 
                        {% endif %} 
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Header section",
        "settings":[
            {
                "type": "image_picker",
                "id": "logo",
                "label": "Logo"
            },
            {
                "type": "link_list",
                "id": "choose_menu",
                "label": "Choose menu"
            }
        ]
    }
{% endschema %}
